    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "副标题",
      "default": "Never Miss a Tiny Beat"
    },
    {
      "type": "text",
      "id": "btn",
      "label": "购买按钮",
      "default": "Buy Now"
    },
    {
      "type": "text",
      "id": "link",
      "label": "购买链接",
      "default": "/products/e8312"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "图标"
        },
        {
          "type": "text",
          "id": "text",
          "label": "文案"
        }
      ]
    }
  ]
}
{% endschema %}