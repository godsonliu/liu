{
	"name": "component_limited_deals",
	"presets": [
		{
			"name": "component_limited_deals"
		}
	],
	"settings": [
		{
			"type": "select",
			"id": "show_device",
			"label": "展示的设备",
			"info": "移动端或PC端",
			"options": [
				{
					"value": "showPc",
					"label": "PC"
				},
				{
					"value": "showMobile",
					"label": "Mobile"
				},
				{
          "value": "",
          "label": "两端共用"
        }
			],
			"default": "showPc"
		},
		{
			"type": "text",
			"id": "box_width",
			"label": "外层盒子的宽度",
			"info": "可以是百分比可以是固定的像素，内容区域会默认居中",
			"default": "80%"
		},
		{
			"type": "text",
			"id": "box_height",
			"label": "外层盒子的高度",
			"info": "可以是百分比可以是固定的像素，内容区域会默认居中",
			"default": "500px"
		},
		{
			"type": "text",
			"id": "box_padding",
			"label": "外层盒子的内边距"
		},
		{
			"type": "color",
			"id": "box_bg",
			"label": "外层盒子背景色",
			"default": "#e5e5e5"
		},
		{
			"type": "checkbox",
			"id": "has_slick",
			"label": "是否需要切换",
			"default": false
		},
		{
			"type": "image_picker",
			"id": "arrow_left",
			"label": "左侧箭头",
			"info": "勾选切换器的时候为必填！！"
		},
		{
			"type": "image_picker",
			"id": "arrow_right",
			"label": "右侧箭头",
			"info": "勾选切换器的时候为必填！！"
		},
		{
			"type": "number",
			"id": "slick_number",
			"label": "展示的数量",
			"default": 1
		},
		{
			"type": "text",
			"id": "slick_width",
			"label": "切换器的宽度",
			"info": "当选择需要切换器的时候，切换器的容器宽度需要自定义，一般每一项的宽度相同",
			"default": "580px"
		},
		{
			"type": "text",
