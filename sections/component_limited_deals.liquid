{% if shop.metafields['global']['storefront_key'].value %}
  {% assign authorization = shop.metafields['global']['storefront_key'].value %}
{% else %}
  {% assign authorization = shop.metafields['global']['storefront_key'] %}
{% endif %}

<style>
@media(max-width: 769px) {
	.showPc {
		display: none !important;
	}
}
@media(min-width: 769px) {
	.showMobile {
		display: none !important;
	}
}
#{{section.id}}.component_limited_deals {
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 0 auto;
	width: {{section.settings.box_width}};
	height: {{section.settings.box_height}};
	padding: {{section.settings.box_padding}};
	background: {{section.settings.box_bg}};
}

#{{section.id}} .component_limited_deals_slick_{{section.id}} {
	width: 100%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 0;
}
{% if section.settings.has_slick %}
.slick-list, .slick-track {
	height: 100%;
}
{% endif %}

#{{section.id}} .limited_items {
	max-width: 1200px;
}
#{{section.id}} .limited_items_img {
	position: relative;
	overflow: hidden;
	font-size: 0;
	border-radius: 12px 12px 0 0;
	display: flex;
	justify-content: center;
}
#{{section.id}} .limited_items_img .items_img {
	width: 100%;
	border: none;
	outline:none; 
	-webkit-tap-highlight-color: transparent; 
	-webkit-appearance: none;
}
#{{section.id}} .limited_items_icon {
	width: 100%;
	top: 0;
	left: 0;
	position: absolute;
}
#{{section.id}} .limited_items_icon_div {
	display: flex;
	position: relative;
	justify-content: center;
	align-items: center;
	max-width: 100px;
}
#{{section.id}} .limited_items_icon img {
	width: 100%;
}
#{{section.id}} .limited_items_icon .icon_txt {
	position: absolute;
	z-index: 2;
	width: 100%;
	height: 100%;
	line-height: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	text-align: center;
}
#{{section.id}} .limited_items_content {
	display: flex;
	flex-direction: column;
	justify-content: center;
	border-radius: 0 0 12px 12px;
	padding: 15px 10px 25px 10px;
}
#{{section.id}} .d-flex {
	display: flex;
}
#{{section.id}} .d-flex .limited_items_img {
	border-radius: 12px 0 0 12px;
	align-items: center;
}
#{{section.id}} .d-flex .limited_items_content {
	border-radius: 0 12px 12px 0;
	padding: 10px 60px 10px 30px;
}
#{{section.id}} .limited_items_content_title {
	display: block;
}
#{{section.id}} .limited_items_content_title, #{{section.id}} .limited_items_content_desc {
	width: 100%;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	line-height: 1.5;
}
#{{section.id}} .limited_items_content_progress {
	position: relative;
	border-radius: 13px;
	margin: 10px 0;
	overflow: hidden;
}
#{{section.id}} .limited_items_content_light_progress {
	position: absolute;
	left: 0;
	top: 0;
	border-radius: 13px;
	text-indent: 14px;
	font-weight: 700;
}
#{{section.id}} .limited_items_content_light_progress_text {
	position: absolute;
	left: 3px;
	top: 50%;
	transform: translateY(-50%);
}
#{{section.id}} .limited_items_content_price {
	/*margin-bottom: 5px;*/
}
#{{section.id}} .product_code {
	display: flex;
	align-items: center;
	margin-bottom: 5px;
}
#{{section.id}} .copy_code {
	text-decoration: underline;
	margin-left: 5px;
	cursor: pointer;
}
#{{section.id}} .limited_items_content_button {
	width: fit-content;
	border: 1px solid;
	max-width: 250px;
	border-radius: 70px;
	outline: none;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-top: 5px;
	cursor: pointer;
	-webkit-tap-highlight-color: rgba(0,0,0,0);
	-webkit-tap-highlight-color: transparent;
}
#{{section.id}} .limited_items_content_button:first-child {
	margin-top: 0;
}
#{{section.id}} .compare-at-price {
	text-decoration: line-through;
	margin-left: 8px;
}
#{{section.id}} .title-desc-div {
	width: 100%;
}
#{{section.id}} .component_limited_deals-box {
	position: relative;
	width: {{section.settings.slick_width}};
	height: {{section.settings.slick_height}};
}
#{{section.id}} .component_limited_deals-box .slick-prev, #{{section.id}} .component_limited_deals-box .slick-next {
	width: 30px;
	height: 30px;
}
#{{section.id}} .component_limited_deals-box .slick-prev:before, #{{section.id}} .component_limited_deals-box .slick-next:before {
	display: none;
}
#{{section.id}} .component_limited_deals-box .slick-prev {
	left: -60px;
}
#{{section.id}} .component_limited_deals-box .slick-next {
	right: -60px;
}
#{{section.id}}.showMobile .component_limited_deals-box .slick-prev {
	left: -30px;
}
#{{section.id}}.showMobile .component_limited_deals-box .slick-next {
	right: -30px;
}
</style>
<div class="component_limited_deals {{section.settings.show_device}}" id="{{section.id}}">
	<div class="component_limited_deals-box">
		{% if section.settings.has_slick %}
		<button type="button" data-role="none" class="slick-arrow slick-prev" data-reactid="561">
			<img src="{{ section.settings.arrow_left | img_url: '' }}" alt="" class="lazyload">
		</button>
		<button type="button" data-role="none" class="slick-arrow slick-next" data-reactid="561">
			<img src="{{section.settings.arrow_right | img_url: ''}}" alt="" class="lazyload">
		</button>
		{% endif %}
		<div class="component_limited_deals_slick_{{section.id}}">
		{% for block in  section.blocks %}
		{% assign oProduct = all_products[block.settings.product_handle] %}
		{% assign variants = oProduct.variants %}
		{% assign oProduct_variant = oProduct.selected_or_first_available_variant %}
		{% for child_variant in variants  %} 
			{% if child_variant.sku == block.settings.variant_sku %}
			{% assign oProduct_variant = child_variant %}
			{% endif %}
		{% endfor %}
		<div 
			class="limited_items {% if block.settings.custom_style == '1' %}d-flex{% endif %}" 
			style="
				width: {{ block.settings.card_width }}; 
				height: {{ block.settings.card_height }};
				{% if block.settings.card_margin %}margin: {{block.settings.card_margin}};{% endif %}
		">
			<div class="limited_items_img" style="width: {{ block.settings.img_width }}; height: {{ block.settings.img_height }}; background: {{ block.settings.img_bg }}">
				
				<a href="{{oProduct_variant.url}}">
					<img class="items_img" src="
					{% if oProduct_variant.image != blank %}
						{{ oProduct_variant.image | image_url}}
						{% else %}
						{{ oProduct.featured_image | image_url}}
						{% endif %}
					"/>
				</a>
				<div class="limited_items_icon">
					<div class="limited_items_icon_div limited_items_icon_div_{{forloop.index}}" 
						style="
							width: {{block.settings.icon_width}};
							left: {{block.settings.icon_left}}; 
							top: {{block.settings.icon_top}}"
						>
						<img src="{{ block.settings.icon_bg | image_url }}" />
						<span 
							class="icon_txt icon_txt_{{forloop.index}}"
							style="
								color: {{ block.settings.icon_txt_color }}; 
								font-size: {{ block.settings.icon_txt_font_size }}; 
								font-weight: {{ block.settings.icon_font_weight }}"
						>
							{{ block.settings.icon_txt }}
						</span>
					</div>
				</div>
			</div>
			<div 
				class="limited_items_content limited_items_content_{{forloop.index}}" 
				style="
					width: {{ block.settings.limited_items_content_width }}; 
					height: {{ block.settings.limited_items_content_height }};
					background: {{block.settings.limited_items_content_bg}};  
					align-items: {{ block.settings.content_text_align }};
					font-family: {{ block.settings.content_font_family }};
				">
				<div class="title-desc-div" 
					style="
					{% if block.settings.title_desc_div != blank %} height: {{block.settings.title_desc_div}}; {% endif %}
					text-align: {% if block.settings.content_text_align == 'flex-end' %}right{% elsif block.settings.content_text_align == 'flex-start' %}left{% else %}center{% endif %};
					">
					<a
						href="{{oProduct_variant.url}}" 
						class="limited_items_content_title"
						style="
						color: {{block.settings.product_title_color}};
						font-size: {{block.settings.product_title_font_size}};
						font-weight: {{block.settings.product_title_font_weight}};
						">
						{% if block.settings.product_title != blank %}
						{{block.settings.product_title}}
						{% else %}
						{{ oProduct.title }}
						{% endif %}
					</a>
					<div 
						class="limited_items_content_desc"
						style="
							color: {{block.settings.product_desc_color}};
							font-size: {{block.settings.product_desc_font_size}};
						"
					>{{ block.settings.product_desc }}</div>
				</div>

				<div class="component_count_timer_{{forloop.index}}">
					{% render 'component_count_timer',
						id: section.id,
						fontWeight: block.settings.timer_font_weight,
						color: block.settings.timer_color,
						fontSize: block.settings.timer_font_size,
						fontSmallSize: block.settings.timer_font_small_size,
						smallColor: block.settings.timer_small_color, 
						dotMarginY: block.settings.dot_margin_y,
						startTime: block.settings.startTime, 
						endTime: block.settings.endTime,
						days: block.settings.days,
						hours: block.settings.hours,
						minutes: block.settings.minutes,
						seconds: block.settings.seconds,
						index: forloop.index,
						sold_txt: block.settings.sold_txt
					%}
				</div>
				<div 
					class="limited_items_content_progress limited_items_content_progress_{{forloop.index}}"
					style="
						width: {{block.settings.content_progress_width}};
						height: {{block.settings.content_progress_height}};
						background: {{block.settings.content_progress_bg}};
					"
					>
						<div 
							class="limited_items_content_light_progress"
							style="
								width: {{oProduct_variant.inventory_quantity | times: 100 | divided_by: block.settings.product_total }}%;
								height: {{block.settings.content_progress_height}};
								background: {{block.settings.content_progress_light_bg}};
							"
						>
						</div>
						<div 
							class="limited_items_content_light_progress_text"
							style="
								color: {{ block.settings.content_progress_light_color }};
								font-size: {{ block.settings.content_progress_light_font_size }};" 
						>{{oProduct_variant.inventory_quantity}} {{block.settings.content_progress_light_left}}</div>
				</div>

				<div class="product_code product_code-{{forloop.index}}">
					<div 
						class="code_txt"
						style="
							color: {{section.settings.code_text_color}};
							font-size: {{section.settings.code_text_font_size}};		
						">
						<span 
							class="code-text"
						>{{ section.settings.code_text }}:</span>
						<span class="code-number code-number-{{forloop.index}}"></span>
					</div>
					<div 
						class="copy_code"
						data-product_title="{{oProduct.title}}"
						data-sku="{{oProduct_variant.sku}}"
						data-copy-text="{{section.settings.copy_text}}"
						data-copying-text="{{section.settings.copying_text}}"
						style="
							color: {{section.settings.copy_text_color}};
							font-size: {{section.settings.copy_text_font_size}};		
						">{{section.settings.copy_text}}</div>
					</div>

				<div class="limited_items_content_price">
					<span 
						class="price-div"
						style="
							color: {{block.settings.price_color}};
							font-size: {{block.settings.price_font_size}};
							font-weight: {{block.settings.price_font_weight}};
						">
						{% render 'price-element', price: oProduct_variant.price %}
					</span>
					<span
						class="compare-at-price"
						style="
							color: {{block.settings.compare_at_price_color}};
							font-size: {{block.settings.compare_at_price_font_size}};
							font-weight: {{block.settings.compare_at_price_font_weight}}
						"
					>
						{% render 'price-element', price: oProduct_variant.compare_at_price %}
					</span>
				</div>
				<style>
					#{{section.id}} .limited_items_content_button-disabled_{{forloop.index}} {
						background-color: {{ block.settings.button_disabled_bg }} !important;
						color: {{block.settings.button_disabled_txt_color}} !important;
						border-color: {{block.settings.button_disabled_border_color}} !important;
						pointer-events: none;
						cursor: not-allowed;
					}
					#{{section.id}} .limited_items_content .limited_items_content_button_{{forloop.index}}:hover{ 
						background: {{block.settings.button_hover_bg}} !important; 
						border-color: {{block.settings.button_hover_border_color}} !important;
						color: {{block.settings.button_hover_txt_color}} !important;
						font-size: {{block.settings.button_txt_font_size}};
					}
				</style>
				<button 
					class="
						{% if oProduct_variant.available == false or oProduct_variant.price == 999999999  %}
						limited_items_content_button-disabled_{{forloop.index}}
						{% endif %}
						limited_items_content_button limited_items_content_button_{{forloop.index}}
					"
					data-v_id="{{oProduct_variant.id}}"
					style="
						{% if block.settings.button_width != blank %}width:{{block.settings.button_width}};{% endif %}
						{% if block.settings.button_height != blank %}height:{{block.settings.button_height}};{% endif %}
						border-color: {{block.settings.button_border_color}};
						color: {{block.settings.button_txt_color}};
						font-size: {{block.settings.button_txt_font_size}};
						background: {{block.settings.button_bg}};
						padding: {{ block.settings.button_padding }};
					">
						{% if oProduct_variant.available and oProduct_variant.price != 999999999  %}
						{{block.settings.button_txt}}
						{% else %}
						{{ 'products.product.sold_out' | t }}
						{% endif %}
					</button>
			</div>
		</div>
		{% endfor %}
		</div>
	</div>
</div>

<script>
// 定时器  index: 代表第几个 sold_txt: 按钮售罄的文案, flag: 代表是否为超出时间范围
window['component_count_timer_{{section.id}}'] = function(index,sold_txt,flag) {
	if(flag) {
		$(`#{{section.id}} .limited_items_content_progress_${index} .limited_items_content_light_progress`).hide()
		$(`#{{section.id}} .limited_items_content_button_${index}`).prop('disabled', true).text(sold_txt)
	}
}
$(function() {
	$('#{{section.id}} .limited_items_content_button').on('click', function() {
		var v_id = $(this).data('v_id')
		var line_items = [{
			variant_id: v_id,
			quantity: 1
		}];
		Shopify.theme.bundleBuynow_BF({
			authorization: "{{ authorization }}",
			checkout: {
				line_items: line_items,
				presentment_currency: "{{ shop.currency }}",
				is_upstream_button: true,
				page_type: "product",
				secret: true,
				wallet_name: "Checkout"
			},
			onSuccess: () => {},
			onError: err => {
				console.log(err)
				$.dialog({ title: err.message, content: err.description, type: 'red' });
			}
		});
	})
	{% for block in  section.blocks %}
		;(function() {
			let skus = []
			let jsVariants;
			let index = "{{forloop.index}}"
			{% assign oProduct = all_products[block.settings.product_handle] %}
			{% assign variants = oProduct.variants %}
			{% assign oProduct_variant = oProduct.selected_or_first_available_variant %}
			{% for child_variant in variants  %} 
				{% if child_variant.sku == block.settings.variant_sku %}
				{% assign oProduct_variant = child_variant %}
				{% endif %}
			{% endfor %}
			jsVariants = {{ oProduct_variant | json }};
			{% for item in oProduct.variants %}
				skus.push("{{ item.sku }}");
			{% endfor %}
			let params = { "skus": skus, "shopify_domain": "{{ shop.permanent_domain }}" };
			$.ajax({
				type: 'GET',
				url: '/apps/pp/shopifyservices/coupons/by_skus',
				data: params,
				success: function success(data) {
					if(data[jsVariants.sku] && data[jsVariants.sku][0]) {
						$(`#{{section.id}} .code-number-${index}`).text(data[jsVariants.sku][0].title)
						if(data[jsVariants.sku][0].value_type === "fixed_amount") {
							$(`#{{section.id}} .icon_txt_${index}`).prepend(data[jsVariants.sku][0].value_style)
						}else if(data[jsVariants.sku][0].value_type === "percentage") {
							$(`#{{section.id}} .icon_txt_${index}`).prepend(Math.abs(parseInt(data[jsVariants.sku][0].value)) + '%')
						}
						window[`loopGetTime_{{section.id}}_${index}`](new Date(data[jsVariants.sku][0].starts_at).getTime(), new Date(data[jsVariants.sku][0].ends_at).getTime())
						$(`#{{section.id}} .limited_items_content_${index} .price-div`).text(Shopify.formatMoney(parseFloat(data[jsVariants.sku][0].variant_price4wscode) * 100, $('body').data('money-format')))
						$(`#{{section.id}} .limited_items_content_${index} .compare-at-price`).text( Shopify.formatMoney(parseFloat(data[jsVariants.sku][0].variant_price) * 100, $('body').data('money-format')) )
					}else {
						$(`#{{section.id}} .limited_items_icon_div_${index}`).hide()
						$(`#{{section.id}} .product_code-${index}`).hide()
					}
				}
			})
		})()
	{% endfor %}
	{% if section.settings.has_slick %}
		$(".component_limited_deals_slick_{{section.id}}").slick({
      autoplay: true,
      speed: 1000,
      autoplaySpeed: 5000,
			slidesToShow: {{section.settings.slick_number}},
      dots: true,
      pauseOnHover: true,
      arrows: true,
			arrows:true,
      prevArrow: $('#{{section.id}} .slick-prev'),
      nextArrow: $('#{{section.id}} .slick-next')
    });
	{% endif %}

	function execCoy(text) {
    const input = document.createElement('INPUT');
    input.style.opacity  = 0;
    input.style.position = 'absolute';
    input.style.left = '-100000px';
    document.body.appendChild(input);

    input.value = text;
    input.select();
    input.setSelectionRange(0, text.length);
    document.execCommand('copy');
    document.body.removeChild(input);
    return true;
  }

	$('#{{section.id}} .copy_code').on('click', function() {
		let copying_text = $(this).data('copying-text')
		let copy_text = $(this).data('copy-text');
		let sku = $(this).data('sku');
		let product_title = $(this).data('product_title')
		let code_number = $(this).prev('.code_txt').find('.code-number').text()
		let self = $(this)
		$(this).text(copying_text)
		execCoy(code_number)
		dataLayer.push({
			"event": "uaEvent",
			"eventCategory": 'copy',
			"eventAction": "{{section.settings.eventAction}}",
			"eventLabel":  code_number + '_' + sku // 由coupon和sku拼接而成
		})
		window.dataLayer.push({ "event_parameters": null });
		window.dataLayer.push({
			"event": "ga4Event",
			"event_name": "copy_coupon_code",
			"event_parameters": {
				"page_group": "{{section.settings.ga4_page_group}}",
				"coupon_name": code_number,
				"info": product_title
			}
		});
		setTimeout(function() {
			self.text(copy_text)
		}, 500)
	})
})
</script>

