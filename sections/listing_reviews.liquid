{% schema %}
{
  "name": "Product reviews",
  "presets": [
    {
      "category": "Product reviews Sections",
      "name": "Product reviews"
    }
  ],
  "settings": [
    {
      "type": "paragraph",
      "content": "[AnkerFields: products](/admin/apps/betametafields/products), compare"
    },
    {
      "type": "checkbox",
      "id": "show_product_reviews",
      "label": "Show reviews",
      "default": true
    },
    {
      "type": "text",
      "id": "class",
      "label": "CSS Class",
      "default": "compare"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Reviews"
    }
  ]
}
{% endschema %}