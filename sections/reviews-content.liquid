      <li data="appliances" class="active toogle_nav">
        <div class="img"><img class="lazyload" data-src="https://dz02g1kgtiysz.cloudfront.net/deals/files/200423_180312_eufy-de-review-page-042203.png"></div>
        <p>{{ section.settings.appliances }}</p>
      </li>
      <li data="security" class="toogle_nav">
        <div class="img"><img class="lazyload" data-src="https://dz02g1kgtiysz.cloudfront.net/deals/files/200427_231200_eufy-de-review-page.jpg"></div>
