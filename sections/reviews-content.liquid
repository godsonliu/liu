      </div>
    </div>

    <div class="reviews_connect">
      <div data="security" class="connect">
        <div class="shop">
          <p>{{ section.settings.security }}</p>
          <a class="btn button-normal submit" href="{{ section.settings.security_link }}">{{ section.settings.shopnow }}</a>
        </div>
        <div  class="reviews_slider">{{ section.settings.security_info }}</div>
      </div>
    </div>

  </div>

  <div class="ins oslider">
    <div class="ins_slider">{{ section.settings.ins_info }}</div>
  </div>

  <div class="reviews_media oslider">
    <div class="media_slider">{{ section.settings.media_info }}</div>
  </div>

  <div class="news">{{ section.settings.news_info }}</div>
  
</section>

<script>
  $(document).ready(function(){
    const w = document.body.offsetWidth;
    const num = w > 767 ? 3 : 1;
    $('.reviews_slider').slick({
      infinite: true,
      speed: 500,
      slidesToShow: num,
      easing: 'linear',
      centerMode: true,
      variableWidth: true,
    });
    $('.ins_slider').slick({
      infinite: true,
      speed: 500,
      slidesToShow: w > 767 ? 4 : 1,
      easing: 'linear'
    });
    $('.media_slider').slick({
      infinite: true,
      speed: 500,
      slidesToShow: num,
      easing: 'linear'
    });
  })

  function closeModal() {
    $('#reviewsModal').css("display", "none");
  }
  function openModal(con) {
    $('#reviewsModal').css("display", "block");
    $('#reviewsModal #modal_con').html(con);
  }

  $('.reviews_connect .show_more').click(e => {
    const dom = e.target.parentNode.parentNode.outerHTML;
    openModal(dom);
  })
  
  $('.toogle_nav').click(e => {
    const dom = e.target;
    const showDom = e.target.parentNode.getElementsByClassName('active')[0];
    if (!dom.classList.contains('active')) {
      const data = dom.getAttribute('data');
      showDom.classList.remove('active');
      dom.classList.add('active');
      $('.reviews_connect .active').removeClass('active');
      $('.reviews_connect').find(`.connect[data=${data}]`).addClass('active')
    }
  })
</script>

