{
  "name": "SmartScale P2 Pro Banner3",
  "presets": [
    {
      "category": "SmartScale P2 Pro Banner3 Sections",
      "name": "SmartScale P2 Pro Banner3"
    }
  ],
  "settings": []
}
{% endschema %}