        "id": "subtitle",
        "label": "副标题",
        "default": "More surprise gifts await! Check out your list of amazing prizes."
      },
      {
        "type": "html",
        "id": "extra_benifit",
        "label": "Extra Benifit",
        "default": "Extra Benifit"
      },
      {
        "type": "html",
        "id": "mach_hotline",
        "label": "Mach Hotline"
      },
      {
        "type": "html",
        "id": "mach_hotline_tips",
        "label": "Mach Hotline Tips"
