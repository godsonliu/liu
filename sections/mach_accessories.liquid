      },
      {
        "type": "html",
        "id": "popup_desc",
        "label": "弹窗描述",
        "default": "popup_desc"
      },
      {
        "type": "text",
        "id": "custom_class",
        "label": "自定义类名"
      }
    ],
    "blocks": [
      {
        "type": "gift_value",
        "name": "gift_value",
        "settings": [
          {
            "type": "image_picker",
            "id": "item_bg",
            "label": "图片"
          },
          {
            "type": "html",
            "id": "item_title",
            "label": "标题"
          },
          {
            "type": "html",
            "id": "item_subtitle",
            "label": "副标题"
          },
          {
            "type": "html",
            "id": "item_desc",
            "label": "描述"
          }
        ]
      },
      {
        "type": "extra_benifit",
        "name": "extra_benifit",
        "settings": [
          {
            "type": "image_picker",
            "id": "item_bg",
            "label": "图片"
          },
          {
            "type": "html",
            "id": "item_title",
            "label": "标题"
          },
          {
            "type": "html",
            "id": "item_subtitle",
            "label": "副标题"
          },
          {
            "type": "html",
            "id": "item_desc",
            "label": "描述"
          }
        ]
      }
    ]
  }
{% endschema %}