        "id": "info_seccess",
        "label": "info_seccess Text",
        "default": "Welcome to Eufy!"
      },
      {
        "type": "text",
        "id": "info_fill_email",
        "label": "info_fill_email Text",
        "default": "Please enter your email address."
      },
      {
        "type": "text",
        "id": "info_err_email",
        "label": "info_err_email Text",
