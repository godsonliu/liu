{% assign lang = page.metafields.global %}

{% if lang.security.value %}
  {% assign security = lang.security.value %}
{% else %}
  {% assign security = lang.security %}
{% endif %}

{% assign list = security.list %}

<div class="banner_1">
    <div class="banner_2">
        <div class="banner_3">
            <img src="{{ security.img1 }}">
        </div>
        <div class="banner_4">
            <div class="banner_5">
                <div class="banner_6">
                    <h1>{{ security.h1 }}</h1>
                    <p>{{ security.h2 }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="lb_all">
        <div class="qh_all">
            {% for o in list %}
                <div class="lb_1">
                    <div class="banner_3 lb_2">
                        <img class="lazyload" data-src="{{ o.img2 }}">
                    </div>
                    <div class="lb_3">
                        <a class="a1"><i class="iconfont"></i></a>
                        <span class="lb_4">{{ o.lb_4 }}</span>
                        <span class="lb_5">{{ o.lb_5 }}</span>
                        <a class="a2"><i class="iconfont"></i></a>
                    </div>
                    <div class="banner_4">
                        <div class="lb_6">
                            <img class="lb_7" src="{{ o.img3 }}">
                            <div class="lb_8">
                                <a href="{{ o.a1 }}">
                                    <img class="lazyload" data-src="{{ o.img4 }}">
                                </a>
                                <a href="{{ o.a2 }}">
                                    <img class="lazyload" data-src="{{ o.img5 }}">
                                </a>
                                <a href="{{ o.a3 }}">
                                    <img class="lazyload" data-src="{{ o.img6 }}">
                                </a>
                            </div>
                        </div>
                        <div class="banner_6">
                            <h1>{{ o.h3 }}</h1>
                            <p>{{ o.h4 }}</p>
                            <img class="lazyload" data-src="{{ o.img7 }}">
                        </div>
                    </div>
                    <div class="banner_3 lb_9">
                        <img class="lazyload" data-src="{{ o.img8 }}">
                    </div>
                </div>
            {% endfor %}  
        </div>
        <!-- <div class="lb_3">
            <a class="a1"><i class="iconfont"></i></a>
            <span class="lb_4">001</span>
            <span class="lb_5">003</span>
            <a class="a2"><i class="iconfont"></i></a>
        </div> -->
        
    </div>
    
</div>

<script type="text/javascript">
    
    $(function() {
        
        
      $(".qh_all").slick({
        autoplay:true,

        infinite: true,
        slidesToShow:1,
        fade: true,
        prevArrow: $('.lb_3 .a1'),
        nextArrow: $('.lb_3 .a2')
      });

      
    });
    
</script>
