        "content": "开发相关"
      },
      {
        "type": "text",
        "id": "custom_class",
        "label": "自定义类名"
      }
		],
		"blocks": [
			{
				"type": "icon",
				"name": "icon",
				"settings": [
          {
            "type": "liquid",
            "id": "icon_default",
            "label": "icon的默认值"
          },
					{
						"type": "image_picker",
						"id": "icon_bg",
						"label": "icon的图标",
						"info": "36 * 36"
					},
					{
						"type": "text",
