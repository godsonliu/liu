


<style>
.component_sign_up_v2_{{section.id}} {
  width: 100%;
  padding: 60px 30px;
  display: flex;
	justify-content: center;
	align-items: center;
  {% if section.settings.sign_up_bg_image %}
	background-image: url({{ section.settings.sign_up_bg_image | image_url }});
	background-position: center;
	background-size: cover;
	{% else %}
		{% if section.settings.sign_up_bg %} background: {{section.settings.sign_up_bg}}; {% endif %}
	{% endif %}
}
</style>
<section class="component_sign_up_v2_{{section.id}} {{section.settings.custom_class}}">
  {% render 'component_sign_up_v2' %}
</section>

{% schema %}
	{
		"name": "component_sign_up_v2",
		"presets": [
			{
				"name": "component_sign_up_v2",
        "blocks": [
          {
            "type": "icon",
            "settings": {
              "icon_default": "{% render 'component_icon_facebook' %}",
              "icon_href": "https://www.facebook.com/Anker.fans"
            }
          },
          {
            "type": "icon",
            "settings": {
              "icon_default": "{% render 'component_icon_twitter' %}",
              "icon_href": "https://twitter.com/AnkerOfficial"
            }
          },
          {
            "type": "icon",
            "settings": {
              "icon_default": "{% render 'component_icon_youtube' %}",
              "icon_href": "https://www.youtube.com/user/AnkerOceanwing"
            }
          },
          {
            "type": "icon",
            "settings": {
              "icon_default": "{% render 'component_icon_instagram' %}",
              "icon_href": "https://www.instagram.com/anker_official/"
            }
          },
          {
            "type": "icon",
            "settings": {
              "icon_default": "{% render 'component_icon_tiktok' %}",
              "icon_href": "https://www.tiktok.com/@ankerofficial"
