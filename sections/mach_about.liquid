<style>
.mach_about {
  width: 100%;
  background: #000;
  text-align: center;
  padding: 80px 0;
  position: relative;
}
.mach_about_title {
  font-size: 4.6875vw;
  line-height: 5.4vw;
  color: #FFFFFF;
  font-weight: 500;
}
.mach_about_title .title-mach {
  font-family: 'Mach Tera';
}
.mach_about_desc {
  width: 60%;
  margin: 40px auto;
  font-size: 24px;
  line-height: 32px;
  color: #fff;
}
.mach_about_img {
  height: 100%;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%)
}
.mach_about_button {
  font-weight: 400;
  font-size: 18px;
  line-height: 21px;
  color: #FFFFFF;
  padding: 10px 35px;
  border: 1px solid #FFFFFF;
  border-radius: 80px;
  cursor: pointer;
}
@media(max-width: 769px) {
  .mach_about {
    padding: 30px 0;
  }
  .mach_about_title {
    font-size: 48px;
    line-height: 55px
  }
  .mach_about_desc {
    width: 95%;
    font-size: 14px;
    line-height: 26px;
  }
}
</style>

<div class="mach_about" id="mach_about">
  <img class="mach_about_img" src="https://cdn.shopify.com/s/files/1/0521/9411/5753/files/Vector_1e7d3a5b-aabb-4aa6-8160-c1ea55973ec5.png?v=1672914671" />
  <div class="mach_about_title">{{ section.settings.title }}</div>
  <div class="mach_about_desc">{{ section.settings.desc }}</div>
  {% if section.settings.button_txt != blank %}
  <a href="{{ section.settings.button_href }}" class="mach_about_button">{{ section.settings.button_txt }}</a>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Mach About",
    "presets": [
      {
        "name": "Mach About"
      }
    ],
    "settings": [
      {
        "type": "html",
        "id": "title",
        "label": "标题",
        "default": "About MACH"
      },
      {
        "type": "html",
        "id": "desc",
        "label": "描述"
      },
      {
        "type": "text",
        "id": "button_href",
        "label": "Learn More跳转链接"
      },
      {
        "type": "text",
        "id": "button_txt",
        "label": "Learn More",
        "default": "Learn More"
      }
    ]
  }
{% endschema %}