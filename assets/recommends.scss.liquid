  height: 100vh;
  background: #000;
  z-index: 99;
}

#reviewsVideoCoverYouTube .closeVideo {
  position: absolute;
  top: 5%;
  right: 5%;
  color: #fff;
}

#reviewsVideoCoverYouTube .box {
  width: 60vw;
  height: 30.54vw;
  position: absolute;
  left: 50%;
  top: 50%;
  text-align: center;
  transform: translate(-50%, -50%);
  @media (max-width: $minPadWidth) {
    width: 95vw;
    height: 48.36vw;
  }
}
