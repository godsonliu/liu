    background: url("//dz02g1kgtiysz.cloudfront.net/deals/files/190425_152315_aboutbanner.jpg") center;
    background-size: auto 100%;
    text-align: center;
    padding: 9% 5%;
    color: white;

    @media (max-width: $maxPhoneWidth) {
      padding: 30% 5%;
    }

    .title {
      font-size: $bannerFontSize;
      color: white;

      @media (max-width: $maxPhoneWidth) {
        font-size: $bigTitleSize;
      }

      line-height: 1.2;
    }

    .line {
      display: inline-block;
      width: 5rem;
      height: 0;
      border-top: 1px solid white;
      margin: 1.5rem 0 2rem;
    }

    .description {
      font-size: 16px;

      @media (max-width: $maxPhoneWidth) {
        font-size: 14px;
      }

      line-height: 1.4;
    }

    .brands_logo {
      display: table;
      width: 100%;
      max-width: 1000px;
      margin: 4% auto 0;

      .item {
        display: table-cell;

        i {
          line-height: 2;
          font-size: $biggestFontSize;

          @media (max-width: 1200px) {
            font-size: $bannerFontSize;
          }

          @media (max-width: $maxPhoneWidth) {
            font-size: $bigTitleSize;
          }
        }
      }
    }
  }

  .brands {
    padding: 4% 3% 0;

    @media (max-width: $maxPhoneWidth) {
      padding: 0;
    }

    .brand {
      margin-bottom: 4%;
      overflow: hidden;
      position: relative;
      z-index: 1;

      .image {
        display: block;

        i {
          display: none;
          padding-top: 10%;
          font-size: 3.82rem;
          line-height: 1;

          @media (max-width: $maxPhoneWidth) {
            display: block;
          }
        }

        img {
          position: relative;
          width: 100%;
          left: 50%;
          transform: translate(-50%);

          @media (max-width: 1200px) {
            width: 150%;
          }
        }
      }

      .intro {
        position: absolute;
        z-index: 2;
        background: rgba(255, 255, 255, 0.95);
        width: 90%;
        max-width: 1200px;
        left: 50%;
        bottom: 5%;
        transform: translate(-50%);
        text-align: center;
        border-bottom: 4px solid $color;

        @media (max-width: $maxPhoneWidth) {
          position: relative;
          width: 100%;
        }

        .logo,
        .text,
        .product {
          display: table-cell;
          vertical-align: middle;
          line-height: 2;

          @media (max-width: $maxPhoneWidth) {
            display: block;
          }
        }

        .logo {
          padding-left: 1rem;
          width: 15rem;

          i {
            line-height: 2;
            font-size: $biggestFontSize;
          }

          @media (max-width: 1200px) {
            width: 10rem;

            i {
              font-size: $bannerFontSize;
            }
          }

          @media (max-width: $maxPhoneWidth) {
            display: none;
          }
        }

        .text {
          padding: 1rem;
          text-align: left;

          p {
            font-size: 1.2rem;
            margin: 0;
          }

          a {
            display: inline-block;
            margin-top: 5%;
          }

          @media (max-width: $maxPhoneWidth) {
            text-align: center;
          }
        }

        .product {
          img {
            display: inline-block;
            vertical-align: middle;
          }
        }
      }

      &.anker {
        .image i {
          color: $color;
        }

        .intro {
          border-color: $color;
        }

        .intro .logo {
          color: $color;
        }

        .intro .text a:hover {
          color: $color;
        }
      }

      &.soundcore {
        .image i {
          color: $soundcoreColor;
        }

        .intro {
          border-color: $soundcoreColor;
        }

        .intro .logo {
          color: $soundcoreColor;
        }

        .intro .text a:hover {
          color: $soundcoreColor;
        }
      }

      &.eufy {
        .image i {
          color: $eufyColor;
        }

        .intro {
          border-color: $eufyColor;
        }

        .intro .logo {
          color: $eufyColor;
        }

        .intro .text a:hover {
          color: $eufyColor;
        }
      }

      &.roav {
        .image i {
          color: $roavColor;
        }

        .intro {
          border-color: $roavColor;
        }

        .intro .logo {
          color: $roavColor;
        }

        .intro .text a:hover {
          color: $roavColor;
        }
      }

      &.nebula {
        .image i {
          color: $nebulaColor;
        }

        .intro {
          border-color: $nebulaColor;
        }

        .intro .logo {
          color: $nebulaColor;
        }

        .intro .text a:hover {
          color: $nebulaColor;
        }
      }
    }
  }

  .information {
    padding: 0 3% 4%;

    .center {
      display: table;
      margin: 0 auto;
      text-align: left;
      font-size: 16px;

      .indent {
        padding-left: 3.5rem;
      }

      p {
        margin: 0;
      }
    }
  }
}

