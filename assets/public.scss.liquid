.localeswitcher {
  width: 100%;
  padding: .75em 1em;
  background: #424245;
  position: relative;
  .ls-content {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    a { color: #fff; }
    .ls-copy { padding-right: 30px; }
    @media (max-width: 768px) {
      display: block;
    }
  }
  .ls-actions {
    padding-inline-start: 32px;
    box-sizing: border-box;
    display: flex;
    flex: 1;
    justify-content: flex-end;
    align-items: center;
    @media (max-width: 1200px) { padding-right: 30px; }
    @media (max-width: 768px) {
      padding: 0;
      margin-top: 1rem;
    }
  }
  .ls-continue {
    margin-left: 20px;
    padding: 3px 10px;
    background: #00a9e0;
    font-size: 16px;
    border-radius: 5px;
    height: 34px;
    line-height: 32px;
    @media (max-width: 768px) {
      margin-left: 1rem;
      font-size: 14px;
    }
  }
  .ls-dropdown {
    position: relative;
    max-width: 343px;
    background: #424245;
    flex: 1;
  }
  .ls-dropdown-select, .ls-dropdown-options {
    span {
      font-size: 17px;
      color: rgba(255,255,255,0.92);
      width: calc(100% - 48px);
      text-overflow: ellipsis;
      white-space: nowrap;
    }
    .ls-dropdown-icon {
      right: 15px;
      top: 2px;
      position: absolute;
      height: 34px;
      transform-origin: center;
      line-height: 30px;
      font-weight: 300;
      color: rgba(255,255,255,0.56);
      cursor: pointer;
      i { font-size: 12px; }
    }
    .ls-dropdown-check, .ls-dropdown-copy, .ls-dropdown-icon { pointer-events: none; }
  }
  .ls-dropdown-select {
    border: 1px solid rgba(255,255,255,0.24);
    border-radius: 8px;
    padding: 0 14px;
    .ls-dropdown-title {
      height: 36px;
      line-height: 35px;
      background-color: #424245;
    }
    .ls-dropdown-check {
      position: absolute;
    }
    .ls-dropdown-copy {
      width: calc(100% - 48px);
      padding-inline-start: 29px;
    }
    .ls-dropdown-icon { transform: rotate(90deg); right: 17px; }
  }
  .ls-dropdown-options {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 41;
    width: 100%;
    .ls-dropdown-copy {
      padding-inline-start: 29px;
    }
    li {
      border-bottom: 1px solid rgba(255,255,255,0.24);
      background-color: #424245;
      padding: 0 14px;
      height: 36px;
      line-height: 35px;
      box-sizing: border-box;
      cursor: default;
      width: 100%;
      &:hover { background-color: #57575a; }
      &:first-child { border-radius: 7px 7px 0 0; }
      &:last-child { border-radius: 0 0 7px 7px; border-bottom: none; }
    }
    .ls-dropdown-option .ls-dropdown-check { position: absolute; display: none; }
    .ls-dropdown-option[aria-selected="true"] {
      .ls-dropdown-check { display: inline-block; width: auto; pointer-events: none; }
    }
    .ls-dropdown-options-list {
      box-shadow: 0 0 0 4px rgba(0, 125, 250, 0.6);
      outline: none;
      border: 1px solid #0071e3;
      border-radius: 8px;
    }
    .ls-dropdown-icon {
      transform: rotate(-90deg);
    }
  }
  .ls-close {
    position: absolute;
    top: 50%;
    right: 0.9rem;
    transform: translateY(-50%);
    margin-left: 10px; font-size: 20px;
    @media (max-width: 768px) {
      top: 5%;
      transform: translateY(0);
    }
  }
}

