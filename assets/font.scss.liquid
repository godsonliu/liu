{%- assign font_array = font_settings_list | split: '~' -%}

{%- for name in font_array -%}
  {%- unless name contains 'error' -%}
    {{ name }}
  {%- endunless -%}
{%- endfor -%}

@font-face {
  font-family: 'flex-icon';
  src:
    url('{{ "flex-icon.ttf" | asset_url }}') format('truetype'),
    url('{{ "flex-icon.woff" | asset_url }}') format('woff'),
    url('{{ "flex-icon.svg" | asset_url }}') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'iconfont';  /* Project id 765941 */
  src:
    url('{{ "iconfont.woff2" | asset_url }}') format('woff2'),
    url('{{ "iconfont.woff" | asset_url }}') format('woff'),
    url('{{ "iconfont.ttf" | asset_url }}') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}