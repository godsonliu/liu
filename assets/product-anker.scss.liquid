// Highlights.scss
.highlights {
  overflow: hidden;
  margin: 0 auto;
  * { box-sizing: border-box; }
  $txtSpace: 2.5rem;
  $txtSpaceMobile: 1rem;
  $titleColor: $gray;
  $detailColor: #7f7f7f;
  @media (max-width: $maxPhoneWidth) {
    h3 {
      text-align: left;
      font-size: 15px;
      margin: 15px 0;
    }
    p {
      font-size: 13px;
    }
  }
  .medias {
    padding: 2rem 1rem;
    img {
      max-width: 100%;
      max-height: 25px;
    }
    h4 {
      font-weight: 500;
    }
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      box-pack: justify;
      justify-content: space-between;
      align-items: center;
      @media (min-width: $minPadWidth) {
        flex-wrap: unset;
      }
    }
    li {
      box-sizing: border-box;
      display: inline-block;
      vertical-align: middle;
      padding: 1rem 1%;
      max-width: 30%; // 25%;
      text-align: center;
      @media (min-width: $minPadWidth) {
        max-width: 150px;
      }
    }
  }
  .fullimg {
    img {
      width: 100%;
      max-width: none;
      @media (max-width: $maxLaptopWidth) {
        @include scaleImg(140%);
      }
      @media (max-width: $maxPhoneWidth) {
        @include scaleImg(120%);
      }
    }
  }
  .line {
    display: inline-block;
    vertical-align: top;
    width: 100px;
    height: 3px;
    background: $color;
    filter: opacity(0.8);
    margin: 1.5rem 0;
    @media (min-width: $minPadWidth) {
      width: 100px;
      margin: 2.5rem 0;
    }
  }
  .banner {
    overflow: hidden;
    position: relative;
    color: $gray;
    &.white {
      @media (min-width: $minPadWidth) {
        color: white;
      }
    }
    &.left {
      @media (max-width: $maxPhoneWidth) {
        .img {
          img {
            @include scaleImg(200%, 3/4);
          }
        }
      }
      @media (min-width: $minPadWidth) {
        .txt {
          text-align: left;
          .box {
            text-align: left;
          }
        }
      }
    }
    &.right {
      @media (max-width: $maxPhoneWidth) {
        .img {
          img {
            @include scaleImg(200%, 1/4);
          }
        }
      }
      @media (min-width: $minPadWidth) {
        .txt {
          // float: right;
          padding-right: 5%;
          text-align: right;
          .box {
            text-align: left;
          }
        }
      }
    }
    &.up {
      .box {
        max-width: none;
      }
      @media (max-width: $maxPhoneWidth) {
        .img {
          img {
            @include scaleImg(200%);
          }
        }
      }
      @media (min-width: $minPadWidth) {
        .txt {
          top: 10%;
          transform: translate(-50%, -10%);
        }
      }
    }
    .img {
      display: table; width: 100%; position: relative;
      img {
        width: 100%;
        float: left;
        @media (max-width: $maxLaptopWidth) {
          @include scaleImg(130%);
        }
        @media (max-width: $maxPhoneWidth) {
          @include scaleImg(200%);
        }
      }
    }
    .txt {
      padding: $txtSpaceMobile;
      box-sizing: border-box;
      text-align: center;
      width: 100%;
      max-width: 1200px;
      backface-visibility: hidden;
      @media (min-width: 768px) {
        position: absolute;
        padding: $txtSpace;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      }
    }
    .box {
      max-width: 340px;
      display: inline-block;
      width: 100%;
      line-height: 1.2;
      text-align: center;
      // @media (min-width: $maxPadWidth) { max-width: 450px; }
