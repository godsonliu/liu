        font-size: 3rem;
        margin: 0;
        line-height: 1;
        i {
          font-size: 5rem;
          line-height: 0.7;
          font-weight: 400;
        }
        & + .desc {
          // missing .line
          padding-top: 1.5rem;
          @media (min-width: $minPadWidth) {
            padding-top: 2.5rem;
          }
        }
        // @media (min-width: $minPadWidth) {
        // }
        @media (min-width: 1350px) {
          font-size: $bannerFontSizeCustom;
        }
      }
      .desc {
        line-height: 1.4;
        margin: 0;
        p {
          &:first-child {
            margin-top: 0;
          }
        }
        @media (min-width: $minPadWidth) {
          font-size: $subTitleSize;
        }
      }
    }
  }
  .columns {
    display: inline-block;
    width: 100%;
    vertical-align: middle;
    .num {
      font-style: normal;
      font-size: 14px;
      color: $color;
      vertical-align: top;
      margin: 0 2rem 0 -3rem;
      width: 1rem;
      display: inline-block;
      padding: 0.5rem 0;
      border-bottom: 1px solid $color;
    }
    .box {
      overflow: hidden;
      position: relative;
    }
    .txt {
      box-sizing: border-box;
      width: 100%;
      color: $gray;
      text-align: center;
      padding: 30px 10px;
      backface-visibility: hidden;
      a {
        color: $gray;
      }
      @media (min-width: $minPadWidth) {
        .txtBox {
          display: inline-block;
          max-width: 340px;
          width: 100%;
        }
        &.white {
          color: #fff;
          // .more { border-color: #fff; }
        }
      }
      &.up {
        .box {
          max-width: none;
        }
      }
      .name {
        padding: 0;
        font-size: 3rem; // $bannerFontSize;
        color: $titleColor;
        &.iconfont {
          font-size: 21px;
          font-weight: 400;
          i {
            font-size: 150px;
          }
        }
        font-weight: $bannerFontWeight;
        margin: 0;
        // white-space: nowrap; text-overflow: ellipsis;
        transition: 0.4s;
        line-height: 1.1;
        @media (max-width: $minPadWidth) {
          font-size: 1.8rem;
          line-height: 1.12;
        }
        @media (max-width: 767px) {
          &:after {
            margin: 1rem auto;
            height: 2px;
          }
        }
        & + .detail {
          // missing .line
          padding-top: 1.5rem;
          @media (min-width: $minPadWidth) {
            padding-top: 2.2rem;
          }
        }
      }
      .detail {
        font-size: $subTitleSize;
        color: $detailColor;
        margin: 0;
        padding: 0;
        transition: 0.4s;
        line-height: 1.7;
        @media (max-width: $minPadWidth) {
          // margin-top: 1rem;
          font-size: 1rem;
          line-height: 1.4rem;
          overflow: hidden;
        }
      }
      .action {
        @media (min-width: $minPadWidth) {
          padding-top: $txtSpace;
        }
        @media (max-width: $minPadWidth) {
          padding-top: 1rem;
        }
      }
      .more {
        position: relative;
        box-sizing: border-box;
        display: inline-block;
        cursor: pointer;
        height: $buttonHeight;
        line-height: $buttonHeight;
        font-size: $subTitleSize;
        border-radius: $buttonHeight;
        // border: 1px solid $gray;
        padding: 0 2rem;
        margin-right: 1rem;
        text-decoration: none;
        background: $color;
        background-image: $gradientBg;
        color: #fff;
        &:after {
          content: "";
          position: absolute;
          top: 0;
          right: 0;
          left: 0;
          bottom: 0;
          border-radius: $buttonHeight;
          border: $btnBorder;
        }
        &:last-child {
          margin-right: 0;
        }
        &:hover {
          background: #fff;
          background-image: $gradientBgHover;
          color: $btnHoverColor;

          &:after {
            border: $btnBorderHover;
          }
        }
        @media (max-width: 767px) {
          // display: none;
          &.play,
          &.stop {
            display: inline-block;
            margin: 0;
            position: absolute;
            top: -6rem;
            z-index: 1;
            left: 50%;
            transform: translate(-50%);
          }
        }
        // &.play {}
        // &.stop {}
      }
    }
    .img {
      img { width: 100%; }
      .video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        opacity: 0;
        trasition: 400ms;
        pointer-events: none;
      }
    }
    // columns
    .bg {
      display: none;
    }
    @media (min-width: $minPadWidth) {
      .box {
        display: table;
        width: 100%;
        background: #f8f8f8;
      }
      .img,
      .txt {
        // display: table-cell;
        display: inline-block;
        vertical-align: middle;
      }
      $imgWidth: 60%;
      .img {
        position: relative;
        width: $imgWidth;
        overflow: hidden;
        img {
          max-width: none;
          width: 100%;
          visibility: hidden;
          min-height: 500px;
        }
        .bg {
          display: block;
          position: absolute;
          top: 0;
          left: 0;
          bottom: 0;
          right: 0;
          background-position: 50%;
          background-size: cover;
          background-repeat: no-repeat;
          transition: 0.8s;
        }
        &.left {
          float: right;
        }
        &:hover {
          .bg {
            transform: scale(1.1);
          }
        }
      }
      .txt {
        width: 100% - $imgWidth;
        &.left {
          position: absolute;
          top: 50%;
          left: 0;
          transform: translateY(-50%);
          .txtBox {
            text-align: left;
          }
        }
        &.right {
          .txtBox {
            text-align: left;
          }
        }
      }
    }
    &.img50 {
      @media (min-width: $minPadWidth) {
        .img, .txt {
          width: 50%;
        }
      }
    }
  }
}
