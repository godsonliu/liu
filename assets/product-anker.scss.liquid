        background: darken($grayBglight, 45); // #777
        color: #fff;
        font-size: 1rem;
      }
      // span{vertical-align: middle;}
      .open { display: inline-block; }
      .close { display: none; }
      @media (max-width: 767px) {
        line-height: 1.8;
        i { top: 2px; }
      }
    }
    dd {
      margin: 0;
      padding: 0.5rem 0;
      color: $gray;
      display: none;
    }
  }
  .nav{
    $navBg: #fff;
    $navBorder: $inputBorderColor;
    $navSpace: 12px;
    $triangleSize: 6px;
    $navSpaceTablet: 20px;
    text-align: center;
    // margin: 0 0 1rem;
    border-bottom: 1px solid $navBorder;
    ul{
      list-style: none;
      margin: 0;
      padding: 0;
      display: inline-block;
      line-height: $buttonHeight;
      margin-bottom: $navSpace;
      @media (min-width: $minPadWidth) {
        border: 1px solid $color;
        border-radius: $buttonHeight;
      }
    }
    li{
      position: relative;
      display: inline-block;
      border-radius: $buttonHeight;
      padding: 0 1.5rem;
      transition: 0.4s;
      cursor: pointer;
      &.active{
        background: $color;
        color: #fff;
        @media (min-width: $minPadWidth) {
          &:before, &:after {
            display: block;
          }
        }
      }
      &:before, &:after {
        display: none;
        content: "";
        position: absolute;
        top: 100%;
        left: 50%;
        width: 0;
        height: 0;
        transform: translateX(-50%);
        border: $triangleSize solid transparent;
        margin-top: #{$navSpace + 1px};
      }
      &:before {
        border-top-color: $navBorder;;
        border-bottom: none;
      }
      &:after {
        border-width: $triangleSize - 1px;
        border-top-color: $navBg;
        border-bottom: none;
      }
    }
    @media (min-width: $minPadWidth) {
      margin-top: 1rem;
      margin-bottom: $navSpaceTablet;
      ul{ margin-bottom: $navSpaceTablet; }
      li{
        &:before, &:after {
          margin-top: #{$navSpaceTablet + 1px};
        }
      }
    }
  }
}

