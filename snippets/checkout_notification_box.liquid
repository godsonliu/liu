{% if shop.metafields['global']['checkout_address_info'].value %}
  {% assign checkout_address_info = shop.metafields['global']['checkout_address_info'].value %}
{% else %}
  {% assign checkout_address_info = shop.metafields['global']['checkout_address_info'] %}
{% endif %}
{% if checkout_address_info.checkout_notification_show  %}
<style>
.checkout_notification_box {
  background: #fcfcee;
  padding: 16px 20px;
  margin-top: 24px;
  margin-bottom: 24px;
  align-items: center;
  border-radius: 4px;
  display: none;
}
.checkout_notification_icon {
  margin-right: 10px;
}
.notification_content {
  font-size: 14px;
  color: #545454;
}
@media(max-width: 999px) {
  .checkout_notification_box {
    padding: 18px 20px;
  }
}
</style>
<div class="checkout_notification_box">
  <div class="checkout_notification_icon">                          
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M10.1461 3.24812C10.4433 2.51616 11.1614 2 12 2C12.8386 2 13.5567 2.51616 13.8539 3.24812C16.8202 4.06072 19 6.77579 19 10V14.6972L20.8321 17.4453C21.0366 17.7522 21.0557 18.1467 20.8817 18.4719C20.7077 18.797 20.3688 19 20 19H15.4646C15.2219 20.6961 13.7632 22 12 22C10.2368 22 8.77806 20.6961 8.53545 19H4C3.63121 19 3.29235 18.797 3.11833 18.4719C2.94431 18.1467 2.96338 17.7522 3.16795 17.4453L5 14.6972V10C5 6.77579 7.17983 4.06072 10.1461 3.24812ZM10.5854 19C10.7913 19.5826 11.3469 20 12 20C12.6531 20 13.2087 19.5826 13.4146 19H10.5854ZM12 5C9.23858 5 7 7.23858 7 10V15C7 15.1974 6.94156 15.3904 6.83205 15.5547L5.86852 17H18.1315L17.168 15.5547C17.0584 15.3904 17 15.1974 17 15V10C17 7.23858 14.7614 5 12 5Z" fill="#0D0D0D"/>
    </svg>
  </div>
  <div class="checkout_notification_content">
    <div class="checkout_desc">{{ checkout_address_info.checkout_notification_txt }}</div>
  </div>
</div>

<script>
$(function() {
  if(Shopify.Checkout && Shopify.Checkout.step === 'contact_information') {
    $('.checkout_notification_box').css({
      display: 'flex'
    })
  }
})
</script>
{% endif %}