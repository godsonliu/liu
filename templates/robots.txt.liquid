  {{- group.user_agent }}

  {%- for rule in group.rules -%}
    {{ rule }}
  {%- endfor -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /*.json' }}
    {{ 'Disallow: /apps/pp/shopifyservices/' }}
    {{ 'Disallow: /apps/pp/rainbow/' }}
    {{ 'Disallow: /discount/' }}
    {{ 'Disallow: /*?pr_prod_strat=' }}
    {{ 'Disallow: /*?yoReviewsPage=' }}
    {{ 'Disallow: /*?section_id=' }}
  {%- endif -%}

  {%- if group.sitemap != blank -%}
      {{ group.sitemap }}
  {%- endif -%}
{% endfor %}
